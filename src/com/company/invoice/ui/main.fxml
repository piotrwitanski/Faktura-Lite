<BorderPane fx:id="mainBorderPane" fx:controller="com.company.invoice.ui.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Menu">
                    <items>
                        <MenuItem text="O programie"/>
                    </items>
                    <items>
                        <MenuItem text="Pomoc"/>
                    </items>
                </Menu>
            </MenuBar>
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="FAKTUROWANIE">
                        <content>
                            <fx:include fx:id="invoice" source="invoiceWindow.fxml"/>
                        </content>
                    </Tab>

                    <Tab text="KONTRAHENCI">
                        <content>
                            <fx:include fx:id="contractor" source="contractorWindow.fxml"/>
                        </content>
                    </Tab>
                    <Tab text="TOWAR/USÅUGA">
                        <content>
                            <fx:include fx:id="service" source="serviceWindow.fxml"/>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>

        </VBox>
    </top>
</BorderPane>