<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane fx:id="serviceBorderPane" fx:controller="com.company.invoice.ui.ServiceTabController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <VBox>
            <HBox>
                <Button text="Dodaj" contentDisplay="TOP" onAction="#showNewServiceDialog">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/table/RowInsertAfter24.gif"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button text="Edytuj" contentDisplay="TOP">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/table/RowInsertBefore24.gif"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button text="UsuÅ„" contentDisplay="TOP">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/table/RowDelete24.gif"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

        </VBox>

    </top>
    <center>
        <TableView fx:id="serviceTable">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="Typ">
                    <cellValueFactory>
                        <PropertyValueFactory property="type"/>
                        <!--TODO add to database-->
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Nazwa">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="VAT">
                    <cellValueFactory>
                        <PropertyValueFactory property="vat"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Cena netto">
                    <cellValueFactory>
                        <PropertyValueFactory property="price_netto"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Cena brutto">
                    <cellValueFactory>
                        <PropertyValueFactory property="price_brutto"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
</BorderPane>
