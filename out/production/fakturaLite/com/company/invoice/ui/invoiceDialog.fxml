            <TableView fx:id="itemsTable" GridPane.rowIndex="5" GridPane.columnIndex="0" prefHeight="150">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Ilość">
                        <cellValueFactory>
                            <PropertyValueFactory property="quantity"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nazwa">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Cena netto">
                        <cellValueFactory>
                            <PropertyValueFactory property="price_netto"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Wartość netto">
                        <cellValueFactory>
                            <PropertyValueFactory property="value_netto"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Wartość brutto">
                        <cellValueFactory>
                            <PropertyValueFactory property="value_brutto"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="VAT">
                        <cellValueFactory>
                            <PropertyValueFactory property="vat"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <GridPane vgap="5" hgap="10" >
