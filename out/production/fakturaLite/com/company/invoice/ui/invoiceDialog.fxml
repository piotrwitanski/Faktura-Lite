                <Label text="Waluta" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                <ComboBox GridPane.rowIndex="1" GridPane.columnIndex="5">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="PLN"/>
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="PLN"/>
                    </value>
                </ComboBox>

                <Label text="Termin zapłaty" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dueDatePicker"  GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100"/>

                <Label text="Rachunek" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
